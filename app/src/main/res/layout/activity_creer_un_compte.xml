                    android:inputType="textPassword"
                    android:hint="Confirmez votre mot de passe"
                    android:background="@null"
                    android:id="@+id/confirmer_votre_mot_de_passe_btn"
                    android:textColor="#666666"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/eye_confirmer_mdp_icone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/eye_off"
                    android:scaleType="fitXY"
                    android:contentDescription="Afficher / masquer le mot de passe"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/checkboxContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="18dp"
                android:layout_marginHorizontal="28dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/checkboxIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/baseline_check_box_outline_blank_24"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Case à cocher"
                />

                <TextView
                    android:id="@+id/rk3t4qjlte6q"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="J’accepte les conditions d'utilisation et la politique de confidentialité."
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/checkboxError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:text="Vous devez accepter les conditions pour continuer."
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:visibility="gone"
                />

            <LinearLayout
                android:id="@+id/creez_le_compte_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
