                    android:id="@+id/r4zoi9tvssgy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/google_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cercle_blanc_connexion"
                        android:padding="14dp"
                        android:layout_marginEnd="35dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/rxi372w8l0y"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/google_logo"
                            android:scaleType="fitXY"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/apple_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cercle_blanc_connexion"
                        android:padding="14dp"
                        android:layout_marginEnd="35dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/razajpk7rltq"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/apple_logo"
                            android:scaleType="fitXY"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/facebook_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cercle_blanc_connexion"
                        android:padding="14dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/rnuh229ugu2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/facebook_logo"
                            android:scaleType="fitXY"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ratlz8yvjgup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="31dp"
                android:layout_marginStart="24dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/r4ucrqlk1je3"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginEnd="9dp"
