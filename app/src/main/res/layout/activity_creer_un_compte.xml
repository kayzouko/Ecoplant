    <ScrollView
        android:id="@+id/r14xus7uom7o"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#DAFAE7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rrx46nbzwmgi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="52dp"
                android:layout_marginStart="25dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/retourBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="22dp"
                    android:src="@drawable/baseline_arrow_back_24"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/rvdvpz5d0s1p"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Créer un compte"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/rjseuuj1ohhb"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="17dp"
                android:layout_marginStart="33dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Rejoindre EcoPlant"
                />
            <TextView
                android:id="@+id/rg9valukhzb"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginBottom="21dp"
                android:layout_marginHorizontal="33dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Créez un compte pour commencer à identifier les plantes"
                />
            <TextView
                android:id="@+id/rt18dvvchq7f"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="33dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Prénom + Nom"
                />
            <LinearLayout
                android:id="@+id/r0xnvybkuhmrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/rectangle_blanc_de_saisie"
                android:paddingVertical="15dp"
                android:paddingHorizontal="18dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="24dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/rbaxba2u511v"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="21dp"
                    android:src="@drawable/mail"
                    android:scaleType="fitXY"
                    />
                <EditText
                    android:inputType="text"
                    android:hint="Entrez votre nom complet"
                    android:background="@null"
                    android:id="@+id/entrez_votre_nom_complet_btn"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/rywozhb6w84"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="33dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Email"
                />
            <LinearLayout
                android:id="@+id/rcbsopkp3y1k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/rectangle_blanc_de_saisie"
                android:paddingVertical="16dp"
                android:paddingHorizontal="18dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="24dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/rvgclfwhdv3j"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="21dp"
                    android:src="@drawable/mail"
                    android:scaleType="fitXY"
                    />
                <EditText
                    android:inputType="text"
                    android:hint="Entrez votre email"
                    android:background="@null"
                    android:id="@+id/entrez_votre_mail_btn"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="-1dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/rdd802qifct7"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="33dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Mot de passe"
                />
            <LinearLayout
                android:id="@+id/rjbgml0ukzyd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/rectangle_blanc_de_saisie"
                android:paddingVertical="16dp"
                android:paddingHorizontal="18dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="24dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r07thnevbw5f7"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/lock"
                    android:scaleType="fitXY"
                    android:contentDescription="Icône cadenas"
                    />
                <EditText
                    android:inputType="textPassword"
                    android:hint="Créez votre mot de passe"
                    android:background="@null"
                    android:id="@+id/creez_votre_mot_de_passe_btn"
                    android:textColor="#666666"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    />
                <ImageView
                    android:id="@+id/eye_mdp_icone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/eye_off"
                    android:scaleType="fitXY"
                    android:contentDescription="Afficher / masquer le mot de passe"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/rso3vw746pme"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="33dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Confirmer le mot de passe"
                />
            <LinearLayout
                android:id="@+id/rtgf58r15ik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
