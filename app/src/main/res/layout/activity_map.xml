<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!--Header-->
    <LinearLayout
        android:id="@+id/header_rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#F4C95D"
        android:paddingVertical="16dp"
        android:paddingHorizontal="18dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Ecoplant_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="EcoPlant"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/cloche_btn"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="🔔"
            android:textColor="#000000"
            android:textSize="20sp"/>
    </LinearLayout>

    <!--conteneur pour la carte-->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_rectangle"
        android:layout_above="@id/footer_rectangle"/>

    <!--footer-->
    <LinearLayout
        android:id="@+id/footer_rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F5F5DC"
        android:paddingTop="28dp"
        android:paddingBottom="8dp"
        android:paddingHorizontal="46dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/scan_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cameraEmoji"
                android:textColor="#666666"
                android:textSize="24sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="📸"/>
            <TextView
                android:id="@+id/scanText"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Scan"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/historique_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/horlogeEmoji"
                android:textColor="#666666"
                android:textSize="24sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="🕒"/>
            <TextView
                android:id="@+id/historiqueText"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Historique"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/map_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mapEmoji"
                android:textColor="#00A67E"
                android:textSize="24sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="🗺️"/>
            <TextView
                android:id="@+id/mapText"
                android:textColor="#00A67E"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Map"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/profil_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/profilEmoji"
                android:textColor="#666666"
                android:textSize="24sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="👤"/>
            <TextView
                android:id="@+id/profilText"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Profil"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>