<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/reurtsnx28w6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#DAFAE7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/r2amggx2twy2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="52dp"
                android:layout_marginStart="25dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/BtnRetour"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="45dp"
                    android:src="@drawable/baseline_arrow_back_24"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/rpnb632yefd"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Se connecter"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/r14tnwlq6dah"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="17dp"
                android:layout_marginStart="33dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Content de vous revoir!"
                />
            <TextView
                android:id="@+id/r1orqdaez7vq"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginBottom="21dp"
                android:layout_marginHorizontal="33dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Veuillez saisir vos coordonnées pour vous connecter"
                />
            <TextView
                android:id="@+id/rjlatvbq8bx"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="33dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Email"
                />
            <LinearLayout
                android:id="@+id/rex39gry4qrs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/rectangle_blanc_de_saisie"
                android:paddingVertical="15dp"
                android:paddingHorizontal="18dp"
                android:layout_marginBottom="22dp"
                android:layout_marginHorizontal="24dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/rltl726387x"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="21dp"
                    android:src="@drawable/mail"
                    android:scaleType="fitXY"
                    />
                <EditText
                    android:inputType="text"
                    android:hint="Entrez votre email"
                    android:background="@null"
                    android:id="@+id/entrez_votre_mail_btn"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/r9z1cxok5fch"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="33dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Mot de passe"
                />
            <LinearLayout
                android:id="@+id/rygyl6gq7doa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/rectangle_blanc_de_saisie"
                android:paddingVertical="16dp"
                android:paddingHorizontal="18dp"
                android:layout_marginBottom="23dp"
                android:layout_marginHorizontal="24dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r16wz7alxr8g"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/lock"
                    android:scaleType="fitXY"
                    />
                <EditText
                    android:inputType="textPassword"
                    android:hint="Entrez votre mot de passe"
                    android:background="@null"
                    android:id="@+id/entrez_votre_mot_de_passe_btn"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/eyeoff_seconnecter_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/eye_off"
                    android:scaleType="fitXY"
                    android:contentDescription="Afficher / masquer le mot de passe"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r4nafhc0l4mc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="29dp"
                android:layout_marginHorizontal="33dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/checkbox"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/baseline_check_box_outline_blank_24"
                    android:scaleType="fitXY"
                    android:clickable="true"
                    android:focusable="true"
                    />
                <TextView
                    android:id="@+id/rwolc3if2jpn"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginEnd="66dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Se souvenir"
                    />
                <TextView
                    android:id="@+id/mot_de_passe_oublie_btn"
                    android:textColor="#00A67E"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="mot de passe oublié ?"
                    android:clickable="true"
                    android:focusable="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/se_connecter_btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seconnecter_btn"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:layout_marginBottom="29dp"
                android:layout_marginHorizontal="24dp"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:id="@+id/rmppf50txgm"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Se connecter"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/r1e336twqpox"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginBottom="21dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="Ou continuez avec"
                />
            <LinearLayout
                android:id="@+id/rlo4n51hcwp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="14dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/google_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cercle_blanc_connexion"
                    android:layout_gravity="center_horizontal"
                    android:padding="14dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/google_logo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/google_logo"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rjexhdwfivd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="182dp"
                android:layout_marginStart="24dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/re1hx8d3v9fe"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginEnd="6dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Vous n’avez pas de compte ?"
                    />
                <TextView
                    android:id="@+id/creer_un_compte_btn"
                    android:textColor="#00A67E"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Créez un compte"
                    android:clickable="true"
                    android:focusable="true"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>