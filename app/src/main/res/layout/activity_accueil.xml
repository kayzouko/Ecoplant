<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/r9ywsglmt17k"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#DAFAE7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rstgg6n2cp0h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="39dp"
                android:layout_marginBottom="18dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/r3nzwhmaa1tb"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/feuille"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rbmfuul0axn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="11dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rtwifoajib6l"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="EcoPlant"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/rzzvjnoco5on"
                android:textColor="#4D4D4D"
                android:textSize="12sp"
                android:layout_marginBottom="50dp"
                android:layout_marginHorizontal="17dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Découvrez et apprenez en plus sur les plantes autour de vous"
                />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/rb2i46lawvau"
                android:layout_width="match_parent"
                android:layout_height="285dp"
                android:layout_marginBottom="47dp"
                android:layout_marginHorizontal="24dp"
                android:src="@drawable/fleurs"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/RoundedImage" />
            <LinearLayout
                android:id="@+id/se_connecter_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/seconnecter_btn"
                android:paddingVertical="16dp"
                android:layout_marginBottom="14dp"
                android:layout_marginHorizontal="24dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rmqxh7maidm"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Se connecter"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/creer_un_compte_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/creer_un_compte"
                android:paddingVertical="18dp"
                android:layout_marginBottom="19dp"
                android:layout_marginHorizontal="24dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rtdiw0f3hne"
                    android:textColor="#00A67E"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Créer un compte"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/rigf96jtn5ps"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginBottom="19dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="Ou continuez avec"
                />
            <LinearLayout
                android:id="@+id/rlo4n51hcwp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="14dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/google_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cercle_blanc_connexion"
                    android:layout_gravity="center_horizontal"
                    android:padding="14dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/google_logo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/google_logo"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/rf10fwlsxllq"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginBottom="14dp"
                android:layout_marginHorizontal="24dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="En continuant, vous acceptez nos conditions d'utilisation et notre politique de confidentialité."
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>